<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/card_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="6dp"
                                    android:background="#fcfcfc"
                                    card_view:cardCornerRadius="6dp">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fcfcfc"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_gallery"
            android:id="@+id/transactionIcon"
            android:paddingRight="10dp"
            android:paddingTop="6dp"/>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mainInfo"
    card_view:layout_constraintLeft_toRightOf="@id/transactionIcon">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvName"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Transaction Name"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvFrom"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:text="from"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTo"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:text="to"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDetail"
            android:textSize="15dp"
            android:textColor="@color/kindaGrey"
            android:text="to"/>

</LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="$10"
            android:id="@+id/tvAmount"
            android:textStyle="bold"
            android:paddingLeft="40dp"
            android:textColor="@color/tealMain"
            card_view:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>


    <ImageButton
        android:id="@+id/btnDel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/addwhite"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom|right"
        android:layout_margin="5dp"
        android:src="@drawable/ic_close_black_18dp"/>
</android.support.v7.widget.CardView>